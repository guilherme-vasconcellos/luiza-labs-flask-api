{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "${workspaceFolder}/src/server.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "pythonPath": "${config:python.pythonPath}",
            "jinja": true
        }
    ]
}